{
  "disable_ai": true,
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Ayu Dark"
  },
  "ui_font_size": 15,
  "buffer_font_size": 13,
  "formatter": "prettier",
  "format_on_save": "prettier",
  "languages": {
    "CSS": {
      "language_servers": ["tailwindcss-language-server"]
    }
  }
}
